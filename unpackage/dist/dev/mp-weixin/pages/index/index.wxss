/*通知公告*/
.message-box {
  width: 100%;
  height: 120rpx;
  background: url(https://zhoukaiwen.com/img/icon/clock.gif) #FFFFFF;
  background-repeat: no-repeat;
  background-size: 100rpx 100rpx;
  background-position: 15rpx 10rpx;
  margin: 0rpx 0rpx 10rpx 0rpx;
  padding-left: 130rpx;
}
.message-box .message-tltle {
  height: 65rpx;
  line-height: 70rpx;
  font-weight: 600;
  font-size: 28rpx;
}
.message-box .message-content {
  color: #0081ff;
}
.message-box .message-content ._span {
  background-color: #0081ff;
  color: #FFFFFF;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  margin-right: 8rpx;
}
.navlist {
  width: calc(100%-40rpx);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin: 20rpx;
  height: 150rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}
.navlist .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33%;
}
.navlist .navItem .navImg {
  width: 70rpx;
  height: 70rpx;
}
.navlist .navItem .navTitle {
  font-size: 26rpx;
  margin-top: 8rpx;
}
.contact {
  width: calc(100%-40rpx);
  margin: 20rpx;
}
.contact button {
  background: #fff;
  border-radius: 16rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.contact button .contactIcon {
  display: flex;
  justify-content: center;
}
.contact button .contactIcon .contactText {
  margin-left: 16rpx;
}
.contact button::after {
  border: 0;
}
.orderInfo {
  width: calc(100%-40rpx);
  margin: 20rpx;
  height: 570rpx;
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  background: linear-gradient(to bottom, #c7e0ff50 0%, #c7e0ff10 20%, #fff 40%, #fff 100%);
}
.orderInfo .infoTitle {
  display: flex;
  justify-content: space-between;
  font-weight: 700;
}
.orderInfo .infoTitle .logisTitle {
  font-size: 30rpx;
}
.orderInfo .infoText {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}
.orderInfo .infoText .infoImg {
  width: 40rpx;
  height: 40rpx;
}
.orderInfo .infoText .intransit {
  margin: 0 12rpx;
  font-weight: 700;
}
.orderInfo .infoText .dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #c6c6c6;
}
.orderInfo .infoContent {
  margin: 20rpx 0 20rpx 0;
  width: 100%;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
}
.orderInfo .infoContent .medicineList {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
  height: 140rpx;
  border: 2rpx solid #f1f1f1;
  box-shadow: -3px -2px 2px rgba(0, 0, 0, 0.2);
  border-radius: 10rpx;
}
.orderInfo .infoContent .medicineList .medicineImg {
  width: 180rpx;
  height: 120rpx;
}
.orderInfo .infoContent .logisticsInfo {
  margin-left: 8rpx;
  display: flex;
  flex-direction: column;
  height: 130rpx;
  justify-content: space-around;
  width: 65%;
}
.orderInfo .infoContent .logisticsInfo .parcelSchedule {
  font-weight: 700;
  font-size: 26rpx;
}
.orderInfo .infoContent .logisticsInfo .parcelArrive {
  margin-left: 6rpx;
  font-size: 26rpx;
  color: #0165c6;
}
.orderInfo .infoContent .logisticsInfo .parceldesc {
  font-size: 26rpx;
  color: #494949;
}
.orderInfo .infoContent .setting {
  width: 5%;
  text-align: center;
  display: flex;
  align-items: center;
}
.orderInfo .infoContent .setting  .u-icon--right {
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
}
.orderInfo .allpackage {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.orderInfo .allpackage .alltext {
  margin-left: 10rpx;
  font-weight: 700;
}
.orderInfo .allpackage .allContent {
  display: flex;
  align-items: center;
}
.orderInfo .allpackage .allContent .infoImg {
  width: 40rpx;
  height: 40rpx;
}
.orderInfo .allpackage .packageNum {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #0165c6;
}
.copyright {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #9E9E9E;
  font-size: 26rpx;
  position: fixed;
  bottom: 0;
}

