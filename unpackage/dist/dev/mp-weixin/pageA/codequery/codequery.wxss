.searchBtn {
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 20rpx;
  background: #fff;
}
.searchBtn  .u-search__action {
  color: #0690d8 !important;
}
.orderstep {
  width: calc(100%-40rpx);
  border-radius: 16rpx;
  min-height: 600rpx;
  margin: 20rpx;
}
.orderstep .info {
  font-weight: 700;
}
.orderstep .codeTop {
  min-height: 400rpx;
  border-radius: 16rpx;
  background: #fff;
  padding: 20rpx 20rpx;
}
.orderstep .codeTop .detailContent {
  width: 100%;
}
.orderstep .codeTop .detailContent .detailItem {
  min-height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 8rpx 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
}
.orderstep .codeTop .detailContent .detailItem .detailSingle {
  display: flex;
  justify-content: flex-start;
  margin-top: 12rpx;
}
.orderstep .codeTop .detailContent .detailItem .detailSingle .detailHeader {
  width: 40%;
  margin-right: 10rpx;
  color: #696969;
}
.orderstep .codeTop .detailContent .detailItem .detailSingle .detailValue {
  width: 60%;
  color: #252623;
}
.orderstep .traceableContent {
  width: 100%;
  min-height: 800rpx;
  background: #fff;
  margin-top: 10rpx;
  padding: 20rpx 20rpx 30rpx 20rpx;
  border-radius: 16rpx;
}
.orderstep .traceableContent .traceableCode {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.orderstep .traceableContent .traceableCode .codeNum {
  font-size: 28rpx;
  color: #ff0012;
}
.orderstep .traceableContent .traceableCode  ::-webkit-scrollbar {
  /*滚动条整体样式*/
  width: 4px !important;
  height: 1px !important;
  overflow: auto !important;
  background: #ccc !important;
  -webkit-appearance: auto !important;
  display: block;
}
.orderstep .traceableContent .traceableCode  ::-webkit-scrollbar-thumb {
  /*滚动条里面小方块*/
  border-radius: 10px !important;
  box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2) !important;
  background: #7b7979 !important;
}
.orderstep .traceableContent .traceableCode  ::-webkit-scrollbar-track {
  /*滚动条里面轨道*/
  background: #FFFFFF !important;
}
.orderstep .traceableContent .traceableCode .firstCode {
  width: 100%;
}
.orderstep .traceableContent .traceableCode .firstCode .firstCodeBox {
  width: 100%;
  height: 54rpx;
  border: 2rpx solid #0690d8;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
}
.orderstep .traceableContent .traceableCode .firstCode .firstCodeBox .firstCodeItem {
  height: 54rpx;
  line-height: 54rpx;
  cursor: pointer;
  margin: 0 0 12rpx 0;
  padding: 0 0 0 10rpx;
}
.orderstep .traceableContent .traceableCode .firstCode .firstCodeBox .firstCodeItem .copyBox {
  color: #409eff;
  cursor: pointer;
  margin-left: 6rpx;
  z-index: 999;
}
.orderstep .traceableContent .traceableCode .secondCode {
  width: 100%;
  margin-top: 30rpx;
}
.orderstep .traceableContent .traceableCode .secondCode .secondCodeBox {
  width: 100%;
  border: 2rpx solid #0690d8;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
}
.orderstep .traceableContent .traceableCode .secondCode .secondCodeBox .secondCodeItem {
  height: 54rpx;
  line-height: 54rpx;
