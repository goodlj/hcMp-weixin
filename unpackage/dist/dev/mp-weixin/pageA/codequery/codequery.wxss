  padding: 0 0 0 10rpx;
}
.orderstep .traceableContent .traceableCode .secondCode .secondCodeBox .secondCodeItem .copyBox {
  color: #409eff;
  cursor: pointer;
  margin-left: 6rpx;
  z-index: 999;
}
.orderstep .traceableContent .traceableCode .thirdCode {
  width: 100%;
