.searchBtn {
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 20rpx;
  background: #fff;
}
.searchBtn  .u-search__action {
  color: #4bcffa !important;
}
.orderstep {
  width: calc(100%-40rpx);
  border-radius: 16rpx;
  min-height: 600rpx;
  margin: 20rpx;
  background: #fff;
  padding: 20rpx 30rpx;
}
.orderstep .ordertitle {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orderstep .ordertitle .ordericon {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.orderstep .ordertitle .ordericon  .u-icon__icon {
  font-size: 44rpx !important;
}
.orderstep .ordertitle .ordertext {
  font-size: 30rpx;
  margin-right: 20rpx;
}
.orderstep .ordertitle .ordernum {
  font-size: 30rpx;
}
.orderstep .coluStep {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  background: #f3f5f7;
  padding: 12rpx;
  border-radius: 16rpx;
}
.orderstep .coluStep  .u-steps-item__wrapper {
  background: none !important;
}
.orderstep .coluStep  .u-text__value--content {
  font-size: 30rpx !important;
}
.orderstep .coluStep  .u-text__value--tips {
  font-size: 26rpx !important;
}
.orderstep .coluStep  .u-steps-item__line--column {
  top: 40rpx;
  height: 80rpx !important;
}

